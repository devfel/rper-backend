{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "ts-transform-paths"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/views/**/*"],
  "exclude": [
    "node_modules",
    "coverage",
    "jest.config.js",
    "ormconfig.js",
    "**/*.test.ts",
    "**/__tests__/*",
    "**/*.spec.ts",
    "dist"
  ]
}
